<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_border"
        android:orientation="horizontal"
        android:padding="2dp">

        <EditText
            android:id="@+id/et_textSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:background="@null"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_textSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:padding="10dp"
            android:text="搜索" />
    </LinearLayout>

    <!--<View-->
    <!--android:id="@+id/divideView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="2dp"-->
    <!--android:layout_marginTop="3dp"-->
    <!--android:background="@color/lightGray" />-->

    <RelativeLayout
        android:id="@+id/relative_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_record"
            android:layout_width="match_parent"
            android:layout_above="@id/tv_deleteRecord"
            android:layout_height="match_parent"></ListView>

        <TextView
            android:id="@+id/tv_deleteRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rect_border"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:text="清空历史记录"
            android:textColor="@color/Black"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>